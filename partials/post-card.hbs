<div class="column is-one-third">
    <article
        class="card {{post_class}} {{#unless feature_image}}no-image{{else}}{{#is "home"}}{{#has index="nth:6"}}post-card-large{{/has}}{{/is}}{{/unless}}">

        {{#if feature_image}}
        <div class="card-image">
            <figure class="image is-4by3">
                <a class="post-card-image-link" href="{{url}}">
                    {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                    <img class="post-card-image" srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                        loading="lazy" src="{{img_url feature_image size="m"}}" alt="{{title}}" />
                </a>
            </figure>
        </div>
        {{/if}}

        <header class="card-header">
            <a class="card-header-title" href="{{url}}">
                {{title}}
            </a>
            {{#if primary_tag}}
            {{#primary_tag}}
            <div class="post-card-primary-tag">{{name}}</div>
            {{/primary_tag}}
            {{/if}}
        </header>
        <div class="card-content">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48">
                        {{#if profile_image}}
                        <a href="{{url}}" class="static-avatar">
                            <img class="author-profile-image" src="{{img_url profile_image size="xs"}}"
                                alt="{{name}}" />
                        </a>
                        {{else}}
                        {{!-- replace with bulma's Icon classes --}}
                        <a href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</a>
                        {{/if}}
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4">John Smith</p>
                    <p class="subtitle is-6">@johnsmith</p>
                </div>
            </div>
            <div class="content">
                {{#if feature_image}}
                <p>{{excerpt words="30"}}</p>
                {{else}}
                <p>{{excerpt words="44"}}</p>
                {{/if}}
                <br>
                <span class="post-card-byline-date"><time
                        datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span
                        class="bull">&bull;</span> {{reading_time}}</span>
            </div>
        </div>{{!--/.post-card-content--}}

        <footer class="card-footer">
            <ul class="author-list">
                {{#foreach authors}}
                <li class="author-list-item">
                    <div class="author-name-tooltip">
                        {{name}}
                    </div>
                </li>
                {{/foreach}}
            </ul>
            <div class="post-card-byline-content">
                <span>{{#has author="count:>2"}}Multiple authors{{else}}{{authors}}{{/has}}</span>
            </div>
        </footer>
    </article>
</div>